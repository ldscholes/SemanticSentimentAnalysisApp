<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorScreenBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.SemanticApp.MainActivity"
    tools:layout_editor_absoluteY="56dp"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:id="@+id/help_button"
        android:layout_width="240dp"
        android:layout_height="230dp"
        android:layout_marginStart="190dp"
        android:layout_marginLeft="190dp"
        android:contentDescription="open help activity"
        android:onClick="launchHelp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.107"
        app:layout_constraintStart_toEndOf="@+id/location_button"
        app:layout_constraintTop_toBottomOf="@+id/photo_label"
        app:srcCompat="@drawable/ic_help_info" />

    <ImageView
        android:id="@+id/location_button"
        android:layout_width="237dp"
        android:layout_height="227dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:contentDescription="open location activity"
        android:onClick="launchLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_map_label"
        app:srcCompat="@drawable/ic_location" />

    <ImageView
        android:id="@+id/list_place_button"
        android:layout_width="244dp"
        android:layout_height="249dp"
        android:layout_marginStart="212dp"
        android:layout_marginLeft="212dp"
        android:layout_marginTop="40dp"
        android:onClick="launchListPlace"
        app:layout_constraintStart_toEndOf="@+id/list_holiday_button"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_holiday_list" />

    <ImageView
        android:id="@+id/list_holiday_button"
        android:layout_width="232dp"
        android:layout_height="250dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="40dp"
        android:onClick="launchListHoliday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_holiday_add" />

    <ImageView
        android:id="@+id/map_button"
        android:layout_width="237dp"
        android:layout_height="232dp"
        android:onClick="launchMaps"
        app:layout_constraintTop_toBottomOf="@+id/add_holiday_label"
        app:srcCompat="@drawable/ic_holiday_map"
        tools:layout_editor_absoluteX="36dp" />

    <ImageView
        android:id="@+id/gallery_button"
        android:layout_width="243dp"
        android:layout_height="230dp"
        android:layout_marginStart="204dp"
        android:layout_marginLeft="204dp"
        android:layout_marginTop="49dp"
        android:onClick="launchCamera"
        app:layout_constraintStart_toEndOf="@+id/map_button"
        app:layout_constraintTop_toTopOf="@+id/view_trip_label"
        app:srcCompat="@drawable/ic_gallery" />

    <TextView
        android:id="@+id/add_holiday_label"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:onClick="launchListHoliday"
        android:text="Holidays"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_holiday_button" />

    <TextView
        android:id="@+id/view_map_label"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:onClick="launchMaps"
        android:text="View Map"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map_button" />

    <TextView
        android:id="@+id/help_label"
        android:layout_width="244dp"
        android:layout_height="48dp"
        android:layout_marginStart="134dp"
        android:layout_marginLeft="134dp"
        android:onClick="launchHelp"
        android:text="Help/Info"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/location_label"
        app:layout_constraintTop_toBottomOf="@+id/help_button" />

    <TextView
        android:id="@+id/location_label"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:onClick="launchLocation"
        android:text="Location"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_button" />

    <TextView
        android:id="@+id/view_trip_label"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="243dp"
        android:layout_marginLeft="243dp"
        android:onClick="launchListPlace"
        android:text="Places"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/add_holiday_label"
        app:layout_constraintTop_toBottomOf="@+id/list_place_button" />

    <TextView
        android:id="@+id/photo_label"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginLeft="172dp"
        android:onClick="launchCamera"
        android:text="Photos"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/view_map_label"
        app:layout_constraintTop_toBottomOf="@+id/gallery_button" />

</android.support.constraint.ConstraintLayout>
